<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:_2延线BOM运行监测系统.res">

    <Style x:Key="btnStyle" TargetType="Button" BasedOn="{StaticResource btnTrigger1}">
        <Setter Property="FontSize" Value="16"></Setter>
        <Setter Property="Background" Value="Goldenrod"></Setter>
        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        <Setter Property="VerticalAlignment" Value="Top"></Setter>
        <Setter Property="Width" Value="55"></Setter>
        <Setter Property="Height" Value="57"></Setter>
    </Style>
    <Style x:Key="lbStyle" TargetType="Label">
        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        <Setter Property="VerticalAlignment" Value="Top"></Setter>
        <Setter Property="Width" Value="50"></Setter>
        <Setter Property="Height" Value="25"></Setter>
    </Style>
    <Style x:Key="cbStyle" TargetType="ComboBox">
        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        <Setter Property="VerticalAlignment" Value="Top"></Setter>
        <Setter Property="Width" Value="115"></Setter>
        <Setter Property="Height" Value="25"></Setter>
    </Style>
</ResourceDictionary>